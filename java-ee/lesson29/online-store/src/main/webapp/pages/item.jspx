<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:jsp="http://java.sun.com/JSP/Page"
      xmlns:c="http://java.sun.com/jsp/jstl/core">

<head>
    <link rel="stylesheet" type="text/css" href="/css/main.css"/>
    <title>On-line store</title></head>
<body>

<jsp:useBean id="item" scope="request" type="com.practicaljava.lesson29.onlinestore.Item"/>

<c:import url="template/header.jspx"/>

<p>You have selected <b>${item.name}</b></p>

<p><b>Description:</b> ${item.description}</p>

<form action="add">
    <input type="hidden" name="productCode" value="${item.productCode}"/>
    <button>Add to cart</button>
</form>

</body>
</html>