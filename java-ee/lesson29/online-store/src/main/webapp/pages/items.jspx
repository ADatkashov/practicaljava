<html xmlns:jsp="http://java.sun.com/JSP/Page"
      xmlns:c="http://java.sun.com/jsp/jstl/core"
      xmlns:message="urn:jsptagdir:/WEB-INF/tags/message"
      xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" type="text/css" href="css/main.css"/>
    <title>On-line store: select items</title>
</head>

<body style="margin:0">

<c:import url="/pages/template/header.jspx"/>
<c:import url="/pages/template/cart.jspx"/>

<message:info/>
<message:error/>

<table width="80%" align="center">
    <tr>
        <th>Name</th>
        <th id="middle">Description</th>
        <th>Price</th>
    </tr>
    <c:forEach var="cartItem" items="${items}" varStatus="loop">
        <tr id="${(loop.index + 1) % 2 ==0 ? '' : 'odd'}">

            <c:set var="url">
                <c:url value="item">
                    <c:param name="productCode" value="${cartItem.productCode}"/>
                </c:url>
            </c:set>

            <td align="center">
                <a class="column-link" href="${url}">
                    ${cartItem.name}
                </a>
            </td>
            <td align="center">${cartItem.description}</td>
            <td align="center">${cartItem.priceInPoints}</td>
        </tr>
    </c:forEach>
</table>
</body>
</html>