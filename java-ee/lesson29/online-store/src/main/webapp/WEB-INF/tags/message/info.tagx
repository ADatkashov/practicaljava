<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0" xmlns:c="http://java.sun.com/jsp/jstl/core">
    <c:if test="${flashInfo != null}">
        <div class="flash-message">
            ${flashInfo}
        </div>
        <c:set var="flashInfo" scope="session" value="${null}"/>
    </c:if>
</jsp:root>