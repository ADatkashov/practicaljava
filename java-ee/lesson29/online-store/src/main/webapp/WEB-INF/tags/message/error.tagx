<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0" xmlns:c="http://java.sun.com/jsp/jstl/core">
    <c:if test="${flashError != null}">
        <div class="flash-error">
            ${flashError}
        </div>
        <c:set var="flashError" scope="session" value="${null}"/>
    </c:if>
</jsp:root>